<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="130sp"
    android:layout_marginBottom="15sp"
    android:onClick="goToAddItem"
    card_view:cardCornerRadius="25sp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="140sp"
            android:layout_height="150sp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:fontFamily="@font/merriweatherblack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Pick up by: "
                    android:fontFamily="@font/merriweatherbold"/>

                <TextView
                    android:id="@+id/pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/merriweatheritalic"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="Tap to Repeat"
                android:fontFamily="@font/merriweatheritalic"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/repeatbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/white"
        android:src="@drawable/repeat"
        android:onClick="goToAddItem"/>


</androidx.cardview.widget.CardView>